<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/Cel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">
        <TextView
            android:padding="10dp"
            android:text="Celcius"
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/txtCel"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"/>
    </GridLayout>
    <Button
        android:id="@+id/btnKonv"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/Cel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Konversi"
        android:textColor="#FFF"
        android:layout_marginHorizontal="25dp"
        android:background="@color/colorAccent"/>
    <GridLayout
        android:id="@+id/Suhu"
        app:layout_constraintTop_toBottomOf="@id/btnKonv"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">
        <TextView
            android:padding="10dp"
            android:text="Kelvin"
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/txtKel"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"/>
        <TextView
            android:padding="10dp"
            android:text="Fahrenheit"
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/txtFah"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"/>
        <TextView
            android:padding="10dp"
            android:text="Reamur"
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/txtRea"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>